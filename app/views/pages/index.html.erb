<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="main-title">
      <div class="logo"><%= image_tag("logo.jpg",:class => "logo") %></div>
      <div class="center"><h3>〜病気になった時のためのSNSサイト〜</h3></div>
    </div>

    <div class="main-link">
      <div class="main-content-wrapper"><%#= link_to 'bucketとは','pages/about' %></div>
      <% if @current_user %>
    　<div class="contribution-wrapper">
        <p class="btn contribution-left"><%= link_to '投稿一覧はこちら','/posts/index' ,:style=>"color:white;" %></p>
      </div>
      <div class="center">
      <%= form_tag("/posts/search", :method => 'get') do %>
      <div class="search"><span style="color:black">病名</span>
        <%= text_field_tag :search %>
        <%= submit_tag "検索" , :sick_name => nil %>
        <% end %>
      </div>

      <% end %>
    </div>

  </div>
</div>
