<div class="main-area">
 <div class="content">
  <h1><%= @current_user.name %></h1>
  <div class="main-content-wrapper">
    <div class="main-content">
     <%= form_tag("/users/#{@user.id}/update" ,{multipart: true}) do %>
      <p>画像</p>
      <div class="straight"><input name="image" type="file"></div>
      <p>ログイン名</p>
      <p><textarea name ="name" rows="1"><%= @user.name %></textarea></p>
      <p>パスワード</p>
      <p><textarea name ="password" rows="1" type="password"><%= @user.password %></textarea></p>
      <p><input type="submit" value="変更"></p>
     <% end %>
   </div>
  </div>
 </div>
</div>
