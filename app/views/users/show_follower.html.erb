<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="main-content">
      <div class="center"><h1>フォロワー</h1></div>
      <% @user.followers.each do |user| %>
      <table>
        <tr>
          <td><%= image_tag "/#{user.image}", :width => '100', :height => '100' %></td>
          <td><%= user.name %></td>
          <td><%= link_to '詳細', "/users/#{user.id}" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
