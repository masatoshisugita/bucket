<div class="main-area">
  <div class="content">
    <h1>投稿画面</h1>
    <div class="main-content-wrapper">
      <div class="main-content">
        <%= form_tag ("/posts/create") do %>
        <%= hidden_field_tag :name, @current_user.name %>
        <p>病名</p>
        <p2>※必須です</p2>
        <p><input type ="text" name = "sick_name"></p>
        <p>期間</p>
        <p><input type="text" name = "period"></p>
        <p>初期症状</p>
        <p2>※必須です</p2>
        <p><input type="text" name = "initial_symptom"></p>
        <p>内容</p>
        <p2>※必須です</p2>
        <p><textarea name = "content" rows="8" cols="50"></textarea></p>
        <p><input type ="submit" value="投稿" class="submit"></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
