<% comments.each do |comment| %>
<div class="box">

    <p><%= link_to "#{comment.user.name}さん", "/" %></p>
    <p><%= comment.body %></p>
    <% if comment.user == @current_user %>
      <p><%= link_to '削除する',"#{comment.post.id}/comments/#{comment.id}", method: :delete, remote: true %></p>
    <% end %>
  </div>

  <% end %>
