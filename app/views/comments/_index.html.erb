<% comments.each do |comment| %>
  <div class="box">
    <p><%= link_to "#{comment.user.name}", "/users/#{comment.user.id}" %></p>
    <p3><%= comment.body %></p3>

    <div class="box2">
      <p1><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></p1>
      <% if comment.user == @current_user %>
      <p1><%= link_to '削除する',"#{comment.post.id}/comments/#{comment.id}", method: :delete, remote: true %></p1>
      <% end %>
    </div>
  </div>
<% end %>
