<% @user ||= @current_user %>
  <div class="stats">
  <a href="<%= "#{@user.id}/following" %>">
    <strong id="following" class="stat">
      <%= @user.followings.count %>
    </strong>
    following
  </a>
  <a href="<%= "#{@user.id}/followers" %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
